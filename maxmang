<script>
   var x=[1,2,3,4,5,6];
   var max=x[0];
   index=0;
   for(var i=1;i<x.length;i++) {
       if (x[i] > max) {
           max = x[i];
           index = i;
       }
   }
       alert(max + " at position " + index);
</script>
